<?xml version='1.0' encoding='utf-8'?>
<widget id="de.andreassteiger.volxbibel" version="2.0.0 DEV" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Volxbibel</name>
    <description>
        Volxbibel App
    </description>
    <author email="hallo@andreassteiger.de" href="http://www.andreassteiger.de">
        Andreas Steiger
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarDefaultScrollToTop" value="true" />
    <preference name="phonegap-version" value="cli-8.1.1" />
</widget>
